[flake8]
# Maximum line length
max-line-length = 100

# Exclude patterns
exclude =
    .git,
    __pycache__,
    venv,
    venv_test,
    .venv,
    env,
    .env,
    migrations,
    manage.py,
    settings.py,
    wsgi.py,
    asgi.py

# Ignore specific errors
# E501: line too long (handled by black/formatter)
# W503: line break before binary operator (PEP 8 style)
# E203: whitespace before ':' (conflicts with black)
ignore = E501, W503, E203

# Per-file ignores
per-file-ignores =
    __init__.py:F401

